{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Server Break",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run-script", "debug-brk"],
        "sourceMaps": true,
        "port": 9229,
        "preLaunchTask": "Compile",
        "skipFiles": ["<node_internals>/**/*.js"]
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Server Debug",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run-script", "debug"],
        "port": 9229,
        "preLaunchTask": "Compile",
        "skipFiles": [
          "<node_internals>/**"
        ]
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Server Start",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["start"],
        "port": 9229,
        "skipFiles": [
          "<node_internals>/**"
        ]
      },
      {
        "name": "Client Debug",
        "type": "edge",
        "request": "launch",
        "version": "canary",
        "url": "http://localhost:1337/views/index.html",
        "webRoot": "${workspaceFolder}/dist/client",
        "sourceMaps": true,
        "runtimeArgs": ["--autoplay-policy=no-user-gesture-required"]
      }
    ],
    "compounds": [
      {
        "name": "Server/Client Debug",
        "configurations": ["Server Debug", "Client Debug"]
      }
    ]
  }